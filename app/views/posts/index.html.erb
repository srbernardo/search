<div class="container" data-controller="instant-search">
  <p style="color: green"><%= notice %></p>

  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: posts_path, method: :get, class: "d-flex", html: { data: { instant_search_target: "form" } } do %>
        <%= text_field_tag( :query,
                            params[:query],
                            class: "form-control",
                            placeholder: "Search",
                            autofocus: true,
                            data: {
                              instant_search_target: "input",
                              action: "keyup->instant-search#update",
                            }
        )%>
      <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-baseline mb-3">
    <h1>Posts</h1>
    <%= link_to "New post", new_post_path %>
  </div>

  <div id="posts" data-instant-search-target="results">
    <%= render "list" %>
  </div>
</div>
